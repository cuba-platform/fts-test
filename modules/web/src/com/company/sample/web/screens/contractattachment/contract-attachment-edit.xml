<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.sample.web.screens.contractattachment">
    <data>
        <instance id="contractAttachmentDc"
                  class="com.company.sample.entity.ContractAttachment"
                  view="contractAttachment-edit">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="contractAttachmentDc">
            <column width="250px">
                <upload id="fileField" fileStoragePutMode="IMMEDIATE" property="file" showFileName="true"/>
                <textArea id="commentField" property="comment" rows="5"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
